@{
    ViewData["Title"] = "Home Page";
}
@model Match.Models.InterestViewModel
@using Match
<audio class="hide-song" controls autoplay>
  <source src="https://ia801408.us.archive.org/20/items/ThisWillBeeverlastingLove/01-ThisWillBeanEverlastingLove.ogg" type="audio/ogg">
</audio>
<div id="landingPage">
    <div id="welcomeContainer" class="infoContainer">
        <h4 class="fontBorder" style="margin-bottom:150px;">Get ready for some dates!</h4>
        <h2 class="fontBorder">Hi, @ViewBag.CurrentUser.name</h2>
        <h2 class="fontBorder">Nice to meet you.</h2>
        <h5 class="fontBorder" style="font-size:20px;">Help us get to know you so that we can recommend some great people</h5>
        <a style="margin-top:100px" id="begin" class="waves-effect waves-light btn-large red"><i class="material-icons right">favorite</i>Lets Begin</a>
    </div>
    <form id="interestForm" asp-controller="Preference" asp-action="addUserInterest" method="post" class="form">
    
        <!-- GET USER HEIGHT -->
        <div class="infoContainer" id="heightContainer">
            <div class="progress">
                <div class="determinate" style="width: 1%"></div>
            </div>
            <h2 style="margin-bottom:200px;margin-top:100px;" class="fontBorder">What is your height?</h2>
            <div class="row">
                <div class="input-field col s6">
                    <input id="feet" type="number" asp-for="feet">
                    <label class="fontBorder" asp-for="feet" style="color: white;font-size: 25px;"></label>
                </div>
                <div class="input-field col s6">
                    <input id="inch" type="number" asp-for="inch">
                    <label class="fontBorder" asp-for="inch" style="color: white;font-size: 25px;"></label>
                </div>
            </div>
            <a style="margin-top:100px" id="goToSalary" class="waves-effect waves-light btn-large blue"><i class="material-icons right">call_made</i>Height</a>
        </div>

        <!-- GET USER SALARY -->
        <div class="infoContainer" id="salaryContainer">
            <div class="progress">
                <div class="determinate" style="width: 10%"></div>
            </div>
            <h2 class="fontBorder" style="margin-bottom:200px;;margin-top:100px;">What is your income?</h2>
            <div id="slider-format" style="background-color:darkseagreen"></div>
            <input id="input-format" name="salary" type="text" style="text-align:center">
            <li><a style="margin-top:100px" id="goToWeed" class="waves-effect waves-light btn-large blue"><i class="material-icons right">attach_money</i>Salary</a></li>
        </div>

        <!-- GET USER  -->
        <div class="infoContainer" id="musicContainer">
            <div class="progress">
                <div class="determinate" style="width: 20%"></div>
            </div>
            <h2 class="fontBorder" style="margin-bottom:150px;;margin-top:100px">Which of these most closely matches your music taste?</h2>
            <div class="row">
                <div class="input-field col s12">
                    <select asp-for="weed"> 
                        <option value="" disabled selected>Please select one:</option>
                        <option value="1">Aretha Franklin</option>
                        <option value="2">The Beatles</option>
                        <option value="3">Tupac</option>
                        <option value="4">George Strait</option>
                    </select>
                </div>
            </div>
            <a style="margin-top:100px" id="goToBody" class="waves-effect waves-light btn-large blue"><i class="material-icons right">local_florist</i>Continue</a>
        </div>

        <!-- GET USER BODYTYPE  -->
        <div class="infoContainer" id="bodyContainer">
            <div class="progress">
                <div class="determinate" style="width: 30%"></div>
            </div>
            <h2 class="fontBorder" style="margin-bottom:150px;;margin-top:100px;">What's your body type?</h2>
            <div class="row">
                <div class="input-field col s12">
                    <select asp-for="body"> 
                        <option value="" disabled selected>Choose your body type</option>
                        <option value="1">Super skinny / currently hungry</option>
                        <option value="2">Ryan Reynolds / Megan Fox</option>
                        <option value="3">Ronnie from Jersey Shore</option>
                        <option value="4">Let's just say I went to Wendy's twice yesterday</option>
                    </select>
                </div>
            </div>
            <a style="margin-top:100px" id="goToPets" class="waves-effect waves-light btn-large blue"><i class="material-icons right">accessibility</i>Continue</a>
        </div>

        <!-- GET USER PETS  -->
        <div class="infoContainer" id="petsContainer">
            <div class="progress">
                <div class="determinate" style="width: 40%"></div>
            </div>
            <h2 class="fontBorder" style="margin-bottom:150px;;margin-top:100px;">What are your thoughts on pets?</h2>
            <div class="row">
                <div class="input-field col s12">
                    <select asp-for="pets"> 
                        <option value="" disabled selected>Tell us what you think?</option>
                        <option value="1">No pets</option>
                        <option value="2">Open to having a pup</option>
                        <option value="3">I have one dog</option>
                        <option value="4">I have a lot of pets</option>
                    </select>
                </div>
            </div>
            <a style="margin-top:100px" id="goToDiet" class="waves-effect waves-light btn-large blue"><i class="material-icons right">pets</i>Continue</a>
        </div>

        <!-- GET USER DIET  -->
        <div class="infoContainer" id="dietContainer">
            <div class="progress">
                <div class="determinate" style="width: 50%"></div>
            </div>
            <h2 class="fontBorder" style="margin-bottom:150px;;margin-top:100px;">What's your diet?</h2>
            <div class="row">
                <div class="input-field col s12">
                    <select asp-for="diet"> 
                        <option value="" disabled selected>Tell us your eating habbits:</option>
                        <option value="1">Gluten Free</option>
                        <option value="2">Vegetarian</option>
                        <option value="3">Ron Swanson</option>
                        <option value="4">Seafood diet - when I see food, I eat it</option>
                    </select>
                </div>
            </div>
            <a style="margin-top:100px" id="goToKids" class="waves-effect waves-light btn-large blue"><i class="material-icons right">local_grocery_store</i>Continue</a>
        </div>

        <!-- GET USER KIDS  -->
        <div class="infoContainer" id="kidsContainer">
            <div class="progress">
                <div class="determinate" style="width: 60%"></div>
            </div>
            <h2 class="fontBorder" style="margin-bottom:150px;;margin-top:100px;">Do you have any kids?</h2>
            <div class="row">
                <div class="input-field col s12">
                    <select asp-for="kids"> 
                        <option value="" disabled selected>What's the genetic situation?</option>
                        <option value="1">None that I'm aware of</option>
                        <option value="2">Unfortunetly</option>
                        <option value="3">Yes, I've instantiated one or more new user(s)</option>
                        <option value="4">I'm infertile</option>
                    </select>
                </div>
            </div>
            <a style="margin-top:100px" id="goTodivorcedWidowed" class="waves-effect waves-light btn-large blue"><i class="material-icons right">child_friendly</i>Continue</a>
        </div>

        <!-- GET USER MARITAL STATUS  -->
        <div class="infoContainer" id="divorcedWidowedContainer">
            <div class="progress">
                <div class="determinate" style="width: 70%"></div>
            </div>
            <h2 class="fontBorder" style="margin-bottom:150px;;margin-top:100px;">What's your marital status?</h2>
            <div class="row">
                <div class="col s6">
                    <label class="fontBorder" style="color: white;font-size: 25px;">Divored?</label>
                    <p class="alignRadioButtons">
                        <input class="fontBorder" value="Yes" name="divorced" type="radio" id="DYes"/>
                        <label class="fontBorder" for="DYes" style="color: white;font-size: 25px;">Yes</label>
                    </p>
                    <p class="alignRadioButtons">
                        <input class="fontBorder" value="No" name="divorced" type="radio" id="DNo"/>
                        <label class="fontBorder" for="DNo" style="color: white;font-size: 25px;">No</label>
                    </p>
                </div>
                <div class="col s6">
                    <label class="fontBorder" style="color: white;font-size: 25px;">Widowed?</label>
                    <p class="alignRadioButtons">
                        <input class="fontBorder" value="Yes" name="widowed" type="radio" id="WYes" />
                        <label class="fontBorder" for="WYes" style="color: white;font-size: 25px;">Yes</label>
                    </p>
                    <p class="alignRadioButtons">
                        <input class="fontBorder" value="No" name="widowed" type="radio" id="WNo" />
                        <label class="fontBorder" for="WNo" style="color: white;font-size: 25px;">No</label>
                    </p>
                </div>
            </div>
            <a style="margin-top:100px" id="goToEthnicity" class="waves-effect waves-light btn-large blue"><i class="material-icons right">people</i>Continue</a>
        </div>

        <!-- GET USER ETHNICITY  -->
        <div class="infoContainer" id="ethnicityContainer">
            <div class="progress">
                <div class="determinate" style="width: 80%"></div>
            </div>
            <div class="row">
                <div class="col s12">
                    <h2 class="fontBorder" style="color: white;margin-bottom:100px;margin-top:100px;">Choose an ethnicity</h2>
                    <p>
                        <input value="Caucasian" name="ethnicity" type="radio" id="white" />
                        <label class="fontBorder" for="white" style="color: white;font-size: 25px;">Caucasian</label>
                    </p>
                    <p>
                        <input value="African American" name="ethnicity" type="radio" id="black" />
                        <label class="fontBorder" for="black" style="color: white;font-size: 25px;">African American</label>
                    </p>
                    <p>
                        <input value="Hispanic/Latino" name="ethnicity" type="radio" id="hispanicLatino" />
                        <label class="fontBorder" for="hispanicLatino" style="color: white;font-size: 25px;">Hispanic/Latino</label>
                    </p>
                    <p>
                        <input value="Asian" name="ethnicity" type="radio" id="asian" />
                        <label class="fontBorder" for="asian" style="color: white;font-size: 25px;">Asian</label>
                    </p>
                    <p>
                        <input value="Macedonian" name="ethnicity" type="radio" id="macedonian" />
                        <label class="fontBorder" for="macedonian" style="color: white;font-size: 25px;">Other</label>
                    </p>
                </div>
            </div>
            <a style="margin-top:50px" id="goToDrinking" class="waves-effect waves-light btn-large blue"><i class="material-icons right">android</i>Continue</a>
        </div>

        <!-- GET USER DRINKING  -->
        <div class="infoContainer" id="drinkingContainer">
            <div class="progress">
                <div class="determinate" style="width: 90%"></div>
            </div>
            <h2 class="fontBorder" style="margin-bottom:100px;margin-top:100px;">What are your thoughts on drinking?</h2>
            <div class="row">
                <div class="input-field col s12">
                    <select asp-for="drinking"> 
                        <option value="" disabled selected>Choose your posion</option>
                        <option value="1">Only the holy wine at church</option>
                        <option value="2">I'm a hipster beer snob</option>
                        <option value="3">They tried to make me go to rehab...</option>
                    </select>
                </div>
            </div>
            <a style="margin-top:50px" id="goToReligion" class="waves-effect waves-light btn-large blue"><i class="material-icons right">local_bar</i>Continue</a>
        </div>

        <!-- GET USER RELIGION  -->
        <div class="infoContainer" id="religionContainer">
            <div class="progress">
                <div class="determinate" style="width: 99%"></div>
            </div>
            <h2 class="fontBorder" style="margin-bottom:100px;margin-top:100px;">What are your religious beliefs?</h2>
            <div class="row">
                <div class="input-field col s12">
                    <select asp-for="religion"> 
                        <option value="" disabled selected>Choose your religion:</option>
                        <option value="1">Christianity</option>
                        <option value="2">Islam</option>
                        <option value="3">Secular/Agnostic/Atheist</option>
                        <option value="4">Hinduism</option>
                        <option value="5">Jewish</option>
                    </select>
                </div>
            </div>
            <a style="margin-top:50px" id="goToFinishedInterest" class="waves-effect waves-light btn-large blue"><i class="material-icons right">explore</i>Continue</a>
        </div>

        <!-- COMPLETE USER INTEREST  -->
        <div class="infoContainer" id="finishInterestContainer">
            <div class="progress">
                <div class="determinate" style="width: 100%"></div>
            </div>
            <h2 class="fontBorder" style="margin-top:100px;">Thank for letting us know about you!</h2>
            <h4 class="fontBorder" style="margin-bottom:100px;">Now just add quick bio about yourself!</h4>
            <div class="row">
                <div class="input-field col s12">
                    <textarea asp-for="bio" id="textarea1" name="userBio" class="materialize-textarea" data-length="120"></textarea>
                    <label style="color: white;font-size: 25px;" for="textarea1">Bio</label>
                </div>
            </div>
            <a style="margin-top:50px" id="submitInterestForm" class="waves-effect waves-light btn-large blue"><i class="material-icons right">fast_forward</i>Continue</a>
        </div>
    </form>
</div>   
